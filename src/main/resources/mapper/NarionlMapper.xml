<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anydoortrip.anydoortrip.apps.area.mapper.NationalMapper">

    <resultMap id="CountryPojo" type="com.anydoortrip.anydoortrip.apps.area.pojo.CountryPojo">
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="create_at" jdbcType="VARCHAR" property="createdAt" />
        <result column="update_at" jdbcType="VARCHAR" property="updatedAt" />
        <association property="nationalPojo" javaType="com.anydoortrip.anydoortrip.apps.area.pojo.NationalPojo">
            <result column="id" jdbcType="INTEGER" property="id" />
            <result column="create_at" jdbcType="VARCHAR" property="createdAt" />
            <result column="update_at" jdbcType="VARCHAR" property="updatedAt" />
            <result column="country_id" jdbcType="VARCHAR" property="countryId" />
            <result column="flag_image" jdbcType="VARCHAR" property="flagImage" />
            <result column="area_image" jdbcType="VARCHAR" property="areaImage" />
        </association>
    </resultMap>
   <select id="selectCountryById" resultMap="CountryPojo" >
       SELECT nf.country_id, nf.flag_image, nf.area_image,c.name FROM national_flag nf LEFT JOIN country c ON nf.country_id = c.id WHERE nf.country_id =  #{id}

   </select>


    <!--查询用户信息-->

</mapper>